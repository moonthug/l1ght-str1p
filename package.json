{
  "name": "l1ght-str1p",
  "version": "0.0.1",
  "description": "Light Strip Controller",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "buildstart": "npm build && npm start",
    "clean": "rm -rf dist",
    "test": "NODE_ENV=test nyc mocha --require ts-node/register --require test/helper 'test/**/*.ts'",
    "lint": "tslint -p .",
    "prepublishOnly": "npm run clean && tsc && npm lint && npm test",
    "precommit": "npm lint",
    "start": "node dist/index.js",
    "start:dev": "FORCE_COLOR=3 ts-node src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "YOURGITREPO"
  },
  "engine": {
    "node": ">8.0.33"
  },
  "files": [
    "dist"
  ],
  "author": "alex@polyglot.rodeo",
  "license": "Apache-2.0",
  "directories": {
    "lib": "dist",
    "test": "test"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "driftless": "^2.0.3",
    "pi-spi": "^1.2.1",
    "simplex-noise": "^2.4.0",
    "webthing": "^0.14.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.33",
    "@types/pi-spi": "0.0.28",
    "@types/source-map-support": "^0.4.0",
    "co-mocha": "^1.2.2",
    "codecov": "^3.0.1",
    "doubleagent": "^1.1.0",
    "husky": "^0.14.3",
    "mocha": "^5.1.1",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-typescript": "^1.1.12",
    "must": "^0.13.4",
    "nyc": "^11.7.1",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "tslint-config-shopify": "^3.0.1",
    "typescript": "^4.1.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
