{
  "name": "l1ght-str1p",
  "version": "0.0.1",
  "description": "Light Strip Controller",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prebuild": "npm run clean",
    "clean": "rm -rf dist",
    "test": "NODE_ENV=test nyc mocha --require ts-node/register --require test/helper 'test/**/*.ts'",
    "lint": "tslint -p .",
    "precommit": "npm lint",
    "start": "node dist/index.js",
    "start:dev": "FORCE_COLOR=3 ts-node src/index.ts"
  },
  "files": [
    "dist"
  ],
  "author": "alex@polyglot.rodeo",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonthug/l1ght-str1p.git"
  },
  "bugs": {
    "url": "https://github.com/moonthug/l1ght-str1p/issues"
  },
  "homepage": "https://github.com/moonthug/l1ght-str1p#readme",
  "directories": {
    "lib": "dist"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "driftless": "^2.0.3",
    "pi-spi": "^1.2.1",
    "simplex-noise": "^2.4.0",
    "webthing": "^0.15.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "@types/pi-spi": "0.0.28",
    "@types/source-map-support": "^0.5.3",
    "co-mocha": "^1.2.2",
    "codecov": "^3.8.1",
    "doubleagent": "^2.0.0",
    "husky": "^4.3.6",
    "mocha": "^8.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-typescript": "^1.1.12",
    "must": "^0.13.4",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "tslint": "^5.20.1",
    "tslint-config-shopify": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
